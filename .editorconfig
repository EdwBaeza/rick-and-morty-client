root = true

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[{*.go,go.mod,go.sum}]
indent_style = tab
indent_size = 4

[*]
charset = utf-8

end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,yaml,yml}]
indent_style = space
indent_size = 2
